@model IEnumerable<IdentityUser>

<div class="text-center my-5">
    <div class="display-6">
        Users
    </div>
</div>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>UserName</th>
            <th>Roles</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td user-name="@user.UserName" user-role=""></td>
                <td>
                    <div class="btn-group">
                        <a data-toggle="tooltip" data-placement="top" title="Edit" class="btn  btn-warning rounded-3"
                            asp-action="Update" asp-route-id="@user.UserName">
                             <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                        <a data-toggle="tooltip" data-placement="top" title="Reset Password" class="btn  btn-info rounded-3"
                            asp-action="ResetPassword" asp-route-id="@user.UserName">
                            <i class="fa-solid fa-lock"></i>
                        </a>
                        <form method="post" asp-action="DeleteOneUser">
                            <input type="hidden" name="UserName" value="@user.UserName">
                            <button data-toggle="tooltip" data-placement="top" title="Delete" type="submit"
                                class="btn btn-danger rounded-3">
                                <i class="fa fa-solid fa-trash"></i>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(() => {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}