@model UserDtoForUpdate

<div class="text-center my-5">
    <div class="display-6">
        Update @Model.UserName
    </div>
</div>

<form method="post" asp-action="Update">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group my-3">
                <label asp-for="UserName">User Name</label>
                <input asp-for="UserName" class="form-control"></input>
            </div>
            <div class="form-group my-3">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control"></input>
            </div>
            <div class="form-group my-3">
                <label asp-for="PhoneNumber">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control"></input>
            </div>
            <div class="form-group my-3">
                <div class="btn-group d-flex justif-content-end">
                    <input type="submit" class="btn btn-primary">
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="fa fa-solid fa-arrow-left"></i>
                        Back
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="lead p-2 mt-2">
                Roles
                @foreach (var role in Model.Roles)
                {
                    <div class="form-check my-2">
                        <input type="checkbox" 
                        name="Roles" 
                        value="@role" 
                        checked="@(Model.UserRoles.Contains(@role))"
                        class="form-check-input">
                        <label class="form-check-label">@role</label>
                    </div>
                }
            </div>
            <div class="text-muted">Please choose the roles for the user.</div>
        </div>
    </div>
</form>